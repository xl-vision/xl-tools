    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2015",
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": [
        "typings",
        "src"
    ]
}
